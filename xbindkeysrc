# Mute
"pactl set-sink-mute 0 toggle"
  XF86AudioMute

"pactl set-sink-volume 0 +5%"
  XF86AudioRaiseVolume

"pactl set-sink-volume 0 -5%"
  XF86AudioLowerVolume

"pactl set-source-mute 1 toggle"
  XF86AudioMicMute

# Brightness down
"xbacklight -5"
  XF86MonBrightnessDown

# Brightness up
"xbacklight +5"
  XF86MonBrightnessUp

# wifi toggle
"wifi toggle"
  XF86WLAN

# switch keyboard backlight
"kbdlight"
  Alt+Mod4 + space

# screenshot
"scrot '%Y-%m-%d-%s_screenshot_$wx$h.jpg' -e 'mv $f ~/screenshots/'"
  Print

# lock screen
"i3lock -c 333333 -n"
  XF86Favorites